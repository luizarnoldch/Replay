<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.15.0/css/all.css"/>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">


    <title>Admin - Login</title>
    <style>
        *{
            font-family: 'Poppins', sans-serif;
        }
        a{
            color: black;
            text-decoration: none;
        }
        a:hover{
            color: black;
        }
    </style>
  </head>
  <body>

      <section class="min-vh-100 text-center d-flex" style="flex-direction: column;">
        <div class="container-fluid py-5" style="flex: 1">
            <div class="comtainter">
                <div class="row align-items-center">
                    <div class="col-12">
                        <img src="/img/logo-principal.png" alt="">
                    </div>
                    <div style="height: 150px;"></div>
                    <div class="offset-4 col-4">
                        <div class="mb-3">
                            <h3 class="fw-bold bg-light rounded-pill p-3">Administracion - Replay</h3>
                            <div style="height: 50px;"></div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                <input id="user" type="text" class="form-control" placeholder="Ingresar usuario" aria-label="Username">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                                <input id="pass" type="password" class="form-control" placeholder="Ingresar contraseña" aria-label="Username">
                            </div>
                            <button id="login" class="btn btn-primary btn-block" style="background-color: #F25854;">Iniciar sesion</button>
                            <div style="height: 25px;"></div>
                            <p id="mensaje" style="color: red;"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid bg-light py-3">
            <div class="container">
                <p>© Copyright 2021 replay.pe</p>
            </div>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $("#login").click(function (){
            $("#mensaje").text("");
            let usuario = $("#user");
            let pass = $("#pass");

            if(usuario.val() == 'Arcangellmar'){
                if(pass.val() == "Patatas123"){
                    $("#mensaje").css("color", "green");
                    $("#mensaje").text("Usuario correcto");
                    $(location).attr('href',"/admin");
                }
                else{
                    $("#mensaje").text("Contraseña incorrecta");
                }
            }
            else{
                $("#mensaje").text("Usuario no encontrado");
            }
        });
    </script>
  </body>
</html>