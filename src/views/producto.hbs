<section class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p>{{producto.img_url}}</p>
                <img src={{producto.img_url}} alt="Mejores precios" class="card-img-top">
            </div>
            <div class="col-md-6"></div>
            <div class="col-md-6"></div>
            <div class="col-md-6"></div>
        </div>
    </div>
</section>
<section class="my-5">
    <div class="container text-center text-md-start">
        <h2>Tambien te podria interesar</h2>
        {{#if recomendados}}
            <div class="carousel-default my-3">
                {{#each recomendados}}
                    <div class="card mx-2 text-center p-3">
                        <a href="/producto/{{id}}">
                            <img src={{img_url}} alt="Mejores precios" class="card-img-top">
                            <div class="card-body">
                                <p>{{name}}</p>
                                <p>S/.{{price}}</p>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p>No se encontraron resultados</p>
        {{/if}}
    </div>
</section>
