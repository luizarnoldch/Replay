<section class="my-5">
    <div class="container text-center">
        <h2>Tecnología</h2>
        {{#if tecnologia}}
            <div class="carousel-default my-3">
                {{#each tecnologia}}
                    <div class="card mx-2 text-center p-3">
                        <a href="/producto/{{id}}">
                            <img src={{img_url}} alt="Mejores precios" class="card-img-top">
                            <div class="card-body">
                                <p>{{name}}</p>
                                <p>S/.{{price}}</p>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p>No se encontraron resultados</p>
        {{/if}}
    </div>
</section>

